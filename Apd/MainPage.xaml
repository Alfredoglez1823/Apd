<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Apd.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Label x:Name="QuestionnaireMessage"
                   Text="Es hora de responder al cuestionario semanal!"
                   IsVisible="False"
                   Style="{StaticResource SubHeadline}" />
            <Button x:Name="AnswerQuestionnaireButton"
                    Text="Responder Cuestionario"
                    IsVisible="False"
                    Clicked="OnAnswerQuestionnaireButtonClicked" />
            
            
            

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
